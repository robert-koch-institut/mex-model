{
    "$id": "https://mex.rki.de/schema/entities/variable",
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "description": "A variable describes how the actual data is modeled. It specifies how the data is represented: as a set of predefined values and what kind of value is allowed.",
    "properties": {
        "belongsTo": {
            "default": [],
            "definition": "The variable group, the described variable is part of. Used to group variables together, depending on how they are structured in the primary source.",
            "items": {
                "$ref": "/schema/entities/variable-group#/identifier"
            },
            "subPropertyOf": [
                "http://purl.org/dc/terms/isPartOf"
            ],
            "type": "array"
        },
        "codingSystem": {
            "anyOf": [
                {
                    "examples": [
                        "SF-36 Version 1"
                    ],
                    "type": "string"
                },
                {
                    "type": "null"
                }
            ],
            "default": null,
            "sameAs": [
                "http://purl.org/dc/terms/conformsTo",
                "https://schema.org/codingSystem"
            ]
        },
        "dataType": {
            "anyOf": [
                {
                    "examples": [
                        "integer",
                        "string",
                        "image",
                        "int55",
                        "number"
                    ],
                    "type": "string"
                },
                {
                    "type": null
                }
            ],
            "default": null,
            "sameAs": [
                "http://www.w3.org/ns/csvw#datatype"
            ]
        },
        "description": {
            "default": [],
            "items": {
                "$ref": "/schema/fields/text"
            },
            "sameAs": [
                "http://purl.org/dc/terms/description"
            ],
            "type": "array"
        },
        "hadPrimarySource": {
            "$ref": "/schema/entities/primary-source#/identifier",
            "sameAs": [
                "http://www.w3.org/ns/prov#hadPrimarySource"
            ]
        },
        "identifier": {
            "$ref": "/schema/fields/identifier",
            "sameAs": [
                "http://purl.org/dc/elements/1.1/identifier"
            ]
        },
        "identifierInPrimarySource": {
            "description": "The identifier of the item used in the primary source.",
            "examples": [
                "123456",
                "item-501",
                "D7/x4/zz.final3"
            ],
            "minLength": 1,
            "type": "string"
        },
        "label": {
            "items": {
                "$ref": "/schema/fields/text",
                "examples": [
                    {
                        "language": "de",
                        "value": "Mehrere Treppenabsätze steigen"
                    }
                ]
            },
            "minItems": 1,
            "sameAs": [
                "http://purl.org/dc/terms/title",
                "http://www.w3.org/2000/01/rdf-schema#label"
            ],
            "type": "array"
        },
        "stableTargetId": {
            "$ref": "/schema/fields/identifier"
        },
        "usedIn": {
            "description": "The resource, the variable is used in.",
            "items": {
                "$ref": "/schema/entities/resource#/identifier"
            },
            "minItems": 1,
            "subPropertyOf": [
                "http://purl.org/dc/terms/isPartOf"
            ],
            "type": "array"
        },
        "valueSet": {
            "default": [],
            "description": "A set of predefined values as given in teh primary source.",
            "items": {
                "examples": [
                    "Ja, stark eingeschränkt",
                    "Ja, etwas eingeschränkt",
                    "Nein, überhaupt nicht eingeschränkt"
                ],
                "type": "string"
            },
            "type": "array"
        }
    },
    "required": [
        "hadPrimarySource",
        "identifier",
        "identifierInPrimarySource",
        "label",
        "stableTargetId",
        "usedIn"
    ],
    "title": "Variable",
    "type": "object"
}
