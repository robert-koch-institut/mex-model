{
    "$$target": "/schema/fields/link",
    "$id": "https://mex.rki.de/schema/fields/link",
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "properties": {
        "language": {
            "enum": [
                "de",
                "en",
                "fr",
                "es",
                "ru"
            ]
        },
        "title": {
            "examples": [
                "Titel einer Webseite",
                "some link title"
            ],
            "type": "string"
        },
        "url": {
            "examples": [
                "https://hello-world.org",
                "file://S:/OE/MF4/Projekte/MEx"
            ],
            "format": "uri",
            "minLength": 1,
            "pattern": "^(?:(?:[^:/?#]+):)?(?://(?:[^/?#]*))?(?:[^?#]*)(?:\\?(?:[^#]*))?(?:#(?:.*))?$",
            "type": "string"
        }
    },
    "required": [
        "url"
    ],
    "title": "Link",
    "type": "object"
}
